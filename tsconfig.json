{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": [
      "@types/express",
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "@types",
    "@types/express"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}